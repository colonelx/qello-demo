{% extends "_html.twig" %}

{% block title %}Registration{% endblock %}

{% block main %}
    {% if errors %}
        <div class="errors">
            <ul>
                {%  for error in errors %}
                <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
    <form method="POST" action="">
    <table>
        <tr>
            <th>Email</th><td><input type="text" name="email" value="{{ inputs['email'] }}"/></td>
        </tr>
        <tr>
            <th>Password</th><td><input type="password" name="password" value=""/></td>
        </tr>
        <tr>
            <th>First name</th><td><input type="text" name="first_name" value="{{ inputs['first_name'] }}"/></td>
        </tr>
        <tr>
            <th>Last name</th><td><input type="text" name="last_name" value="{{ inputs['last_name'] }}"/></td>
        </tr>

        <tr>
            <td colspan="2" class="text-right"><input type="submit" value="Submit"/></td>
        </tr>
    </table>
    </form>
{% endblock %}